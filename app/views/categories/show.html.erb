<div class="grid place-items-center w-full ">
  <div class="w-1/2 mx-20 py-4 px-8 bg-white  shadow-lg rounded-lg my-20">
  <div>
    <%= link_to @category.name, @category , class:'text-gray-800 text-2xl text-center font-semibold' %>
    <p class="text-2xl text-center"><%= pluralize(@category.articles.count, "article") %></p>
    <div class="flex  justify-center space-x-4 mt-5">
        <% if logged_in? && current_user.admin? %>
          <div>
            <%= link_to "Edit category", edit_category_path(@category), class: "px-4 py-2 rounded-md text-sm font-medium border-0 focus:outline-none focus:ring transition text-white bg-red-500 hover:bg-red-600 active:bg-red-700 focus:ring-red-300" %>
          </div>
        <% end %>
    </div>
  </div>
  <div class="flex justify-end mt-4">
    <p  class="text-sm font-medium text-indigo-500">Joined <%= time_ago_in_words(@category.created_at) %> ago</p>

  </div>
</div>
</div>
<%= render 'articles/articles' %>